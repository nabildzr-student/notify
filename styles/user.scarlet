.user-image
	display block
	width avatar-size
	height avatar-size
	border-radius 100%
	box-shadow outline-shadow-medium
	object-fit cover
	default-transition
	:hover
		box-shadow outline-shadow-heavy

> 900px
	.user-image
		width 42px
		height 42px

> 1400px
	.user-image
		width avatar-size
		height avatar-size