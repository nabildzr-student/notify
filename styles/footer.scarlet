.footer
	text-align center
	font-size 0.8rem
	opacity 0.7
	margin-top 0.5rem

	&.mountable
		opacity 0 !important

	&.mounted
		opacity 0.7 !important

.footer-element
	display inline-flex
	align-items center

	:after
		content " | "
		color text-color
		opacity 0.5
		width 1.5em

	:last-child
		:after
			display none