#search
	background transparent
	border none !important
	box-shadow none !important
	font-size 1em
	padding 0
	width 0
	height auto
	flex-grow 1
	opacity 0.5
	-webkit-appearance none

	:focus
		color link-color
		opacity 1.0

	::-webkit-search-cancel-button
		display none

// Microphone icon
.speech-input
	display none
	opacity 0
	default-transition

	:hover
		cursor pointer
		opacity 1

.speech-input-available
	display block
	opacity 0.25

.speech-listening
	color link-hover-color
	opacity 1