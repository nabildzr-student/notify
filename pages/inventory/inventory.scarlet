	// [data-item-id="pro-account-12"]
	// 	.shop-item-icon
	// 		opacity 0.9

	// [data-item-id="pro-account-24"]
	// 	.shop-item-icon
	// 		opacity 1.0

animation hover-item
	0%
		transform rotateZ(0)
	20%
		transform rotateZ(5deg)
	80%
		transform rotateZ(-5deg)
	100%
		transform rotateZ(0)

.inventory-slot-quantity
	position absolute
	bottom 0.25rem
	right 0.25rem
	font-size 0.8rem
	line-height 1em
	opacity 0.5
	pointer-events none

.drag-enter
	border-style dashed